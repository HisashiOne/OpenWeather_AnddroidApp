<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    >

    <LinearLayout android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/orange_circle_gradient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:id="@+id/mainContainerWidget"
        >
        <ImageView android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:id="@+id/IconWidget"
            android:layout_marginLeft="5dp"
            android:src="@drawable/d03"
            />
        <ImageView android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView android:layout_height="25dp"
            android:layout_width="wrap_content"
            android:text="City"
            android:textColor="@android:color/white"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:id="@+id/cityWidget"
            />

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weather"
            android:textSize="17sp"
            android:id="@+id/DescripWidget"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:lines="3"
            android:layout_marginTop="-5dp"
            />
    </LinearLayout>

    <LinearLayout android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/orange_circle_gradient"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:id="@+id/cicle_2">

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="18ยบ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:id="@+id/tempWidget"
            android:lines="1"
            />
        </LinearLayout>


</RelativeLayout>